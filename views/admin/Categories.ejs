        <script>
async function unListCategory(categoryId) {
    const result = await Swal.fire({
        title: "Are you sure?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes"
    });

    if (result.isConfirmed) {
        try {
            const response = await fetch(`/unlistCategory/${categoryId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                    Swal.fire({
                    title: "Unlisted!",
                    text: "the category has been unlisted.",
                    icon: "success",
                    showConfirmButton: false
                });
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                throw new Error('Network response was not ok.');
            }
        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Something went wrong!",
                showConfirmButton: false
            });
            setTimeout(() => {
                location.reload();
            }, 2000);
        }
    }
}
async function listCategory(categoryId) {
    const result = await Swal.fire({
        title: "Are you sure?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes"
    });

    if (result.isConfirmed) {
        try {
            const response = await fetch(`/listCategory/${categoryId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                    Swal.fire({
                    title: "listed!",
                    text: "The category has been listed.",
                    icon: "success",
                    showConfirmButton: false
                });
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                throw new Error('Network response was not ok.');
            }
        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Something went wrong!",
                showConfirmButton: false
            });
            setTimeout(() => {
                location.reload();
            }, 2000);
        }
    }
}


