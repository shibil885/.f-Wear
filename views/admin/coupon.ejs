        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupon List </h2>
                </div>
                <div>
                    <a href="/addCoupon" class="btn btn-primary"><i class="material-icons md-plus"></i>Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Coupon Code</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">%</th>
                                    <th scope="col">Up to</th>
                                    <th scope="col">Max amount</th>
                                    <th scope="col">Exp date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (coupon.length > 0) { %>
                                    <% coupon.forEach(element => { %>
                                        <tr>
                                            <td><%= element.coupon_code %></td>
                                            <td><%= element.description %></td>
                                            <td><%= element.percentage %></td>
                                            <td><%= element.minimumAmount %></td>
                                            <td><%= element.maximumAmount %></td>
                                            <td><%= formatDate(element.expiryDate) %></td>
                                            <% function formatDate(date) {
                                                const options = { year: 'numeric', month: 'short', day: 'numeric' };
                                                return new Date(date).toLocaleDateString(undefined, options);
                                            } %>
                                            <td>
                                                <% if (element.isListed == true) { %>
                                                    <span class="text-success">List</span>
                                                <% } else { %>
                                                    <span class="text-danger">Unlist</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (element.isListed) { %>
                                                    <a class="badge rounded alert-danger" onclick="unlistCoupon('<%= element._id %>')">Unlist</a>
                                                <% } else { %>
                                                    <a class="badge rounded alert-success" onclick="listCoupon('<%= element._id %>')">List</a>
                                                <% } %>
                                                <a href="/editCoupon/?couponId=<%= element._id %>"class="badge rounded alert-warning" onclick="editCoupon('<%= element._id %>')">Edit</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8">No coupons available.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
